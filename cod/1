#include <iostream>
using namespace std;

void selectionSort(int arr[], int n) {
    for (int i = 0; i < n - 1; i++) {
        int minIndex = i;
        
        // Поиск минимального элемента в несортированной части
        for (int j = i + 1; j < n; j++) {
            if (arr[j] < arr[minIndex]) {
                minIndex = j;
            }
        }
        
        // Обмен минимального элемента с первым несортированным
        if (minIndex != i) {
            int temp = arr[i];
            arr[i] = arr[minIndex];
            arr[minIndex] = temp;
        }
    }
}

int main() {
    int data[] = {29, 15, 42, 8, 33, 17};
    int n = sizeof(data) / sizeof(data[0]);
    
    cout << "Исходный массив: ";
    for (int i = 0; i < n; i++) cout << data[i] << " ";
    cout << endl;
    
    selectionSort(data, n);
    
    cout << "Отсортированный массив: ";
    for (int i = 0; i < n; i++) cout << data[i] << " ";
    
    return 0;
}



Исходный массив: 29 15 42 8 33 17 
Отсортированный массив: 8 15 17 29 33 42
