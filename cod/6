#include <iostream>
using namespace std;

void heapify(int arr[], int n, int i) {
    int largest = i; // Корень
    int left = 2 * i + 1;
    int right = 2 * i + 2;
    
    // Если левый дочерний больше корня
    if (left < n && arr[left] > arr[largest])
        largest = left;
    
    // Если правый дочерний больше наибольшего
    if (right < n && arr[right] > arr[largest])
        largest = right;
    
    // Если наибольший не корень
    if (largest != i) {
        swap(arr[i], arr[largest]);
        heapify(arr, n, largest);
    }
}

void heapSort(int arr[], int n) {
    // Построение кучи
    for (int i = n / 2 - 1; i >= 0; i--)
        heapify(arr, n, i);
    
    // Извлечение элементов из кучи
    for (int i = n - 1; i > 0; i--) {
        swap(arr[0], arr[i]);
        heapify(arr, i, 0);
    }
}

int main() {
    int data[] = {4, 10, 3, 5, 1, 8, 7};
    int size = sizeof(data) / sizeof(data[0]);
    
    cout << "Исходный массив: ";
    for (int i = 0; i < size; i++) cout << data[i] << " ";
    cout << endl;
    
    heapSort(data, size);
    
    cout << "Отсортированный массив: ";
    for (int i = 0; i < size; i++) cout << data[i] << " ";
    
    return 0;
}

Исходный массив: 4 10 3 5 1 8 7 
Отсортированный массив: 1 3 4 5 7 8 10
