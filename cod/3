#include <iostream>
using namespace std;

void insertionSort(int arr[], int n) {
    for (int i = 1; i < n; i++) {
        int key = arr[i]; // Текущий элемент для вставки
        int j = i - 1;
        
        // Сдвиг элементов больших key вправо
        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j--;
        }
        
        // Вставка key на правильную позицию
        arr[j + 1] = key;
    }
}

int main() {
    int values[] = {12, 11, 13, 5, 6, 3};
    int size = sizeof(values) / sizeof(values[0]);
    
    cout << "Исходный массив: ";
    for (int i = 0; i < size; i++) cout << values[i] << " ";
    cout << endl;
    
    insertionSort(values, size);
    
    cout << "Отсортированный массив: ";
    for (int i = 0; i < size; i++) cout << values[i] << " ";
    
    return 0;
}


Исходный массив: 12 11 13 5 6 3 
Отсортированный массив: 3 5 6 11 12 13
